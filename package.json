{
  "scripts": {
    "test": "go test -v ./... -covermode=atomic",
    "setup": "npm i",
    "fmt": "bash scripts/fmt.sh",
    "vet": "go vet ./...",
    "lint": "golangci-lint run",
    "c": "bash scripts/coverage.sh",
    "tag": "bash scripts/tag.sh",
    "mock": "gomic gen && npm run fmt",
    "durl": "bash scripts/durl.sh",
    "ci-local": "time drone exec --pipeline build --env-file scripts/drone-local-env --event pull_request"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run vet && npm run lint && npm test",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-angular": "^7.1.2",
    "husky": "^1.1.3",
    "lodash.template": ">=4.5.0",
    "lodash": ">=4.17.13"
  }
}
